{
  "name": "cql",
  "displayName": "cql",
  "description": "Cassandra CQL extension for VS Code.",
  "version": "0.8.3",
  "publisher": "LawrenceGrant",
  "author": {
    "name": "Lawrence Grant"
  },
  "engines": {
    "vscode": "^1.13.1"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lawrencekgrant/vscode-cql/issues"
  },
  "keywords": [
    "cql",
    "cassandra",
    "query",
    "language"
  ],
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/lawrencekgrant/vscode-cql"
  },
  "icon": "images/cassandra-icon.png",
  "iconUrl": "images/cassandra-icon.png",
  "categories": [
    "Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cql",
    "onCommand:cql.about",
    "onCommand:cql.execute",
    "onCommand:cql.scan",
    "onCommand:cql.schema"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "cql.about",
        "title": "About CQL"
      },
      {
        "command": "cql.execute",
        "title": "Execute CQL Statement"
      },
      {
        "command": "cql.scan",
        "title": "Scan Schema"
      },
      {
        "command": "cql.schema",
        "title": "Show Schema"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cqlTables",
          "name": "Cassandra Tables"
        }
      ]
    },
    "languages": [
      {
        "id": "cql",
        "aliases": [
          "CQL",
          "cql"
        ],
        "extensions": [
          ".cql"
        ],
        "configuration": "./lang/cql.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cql",
        "scopeName": "source.cql",
        "path": "./syntaxes/cql.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "cql",
        "path": "./snippets/cql.json"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cql.execute",
          "group": "navigation"
        },
        {
          "command": "cql.scan",
          "group": "navigation"
        },
        {
          "command": "cql.schema",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CQL extension configuration",
      "properties": {
        "cql.address": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Address of Cassandra cluster to connect to."
        },
        "cql.port": {
          "type": "integer",
          "default": 9042,
          "description": "Port of the Cassandra cluster to connect to."
        },
        "cql.scanOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Scan the default Cassandra server for completion items upon startup."
        },
        "cql.schema": {
          "type": "object",
          "default": {
            "contactPoints": [
              "127.0.0.1"
            ],
            "hosts": [
              "127.0.0.1"
            ]
          },
          "description": "Connection object for connecting to cassandra"
        },
        "cql.resultStyle": {
          "type": "object",
          "default": {
            "format": "json",
            "location": "pane"
          }
        }
      }
    },
    "keybindings": [
      {
        "key": "shift+f5",
        "command": "cql.execute"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/cassandra-driver": "^0.8.10",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "uuid": "^3.1.0",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "@types/uuid": "^3.0.0",
    "cassandra-driver": "^3.0.2",
    "util": "^0.10.3",
    "uuid": "^3.1.0"
  }
}
